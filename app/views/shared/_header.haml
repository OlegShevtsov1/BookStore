%header.navbar.navbar-default
  .container
    .navbar-header
      %button.navbar-toggle.pull-left{type: "button", 'data-toggle': "collapse", 'data-target': "#navbar"}
        %span.sr-only
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand=t('title')
      %a.shop-link.pull-right.visible-xs{href: "#"}
        %span.shop-icon
          %span.shop-quantity 3
    %a.shop-link.pull-right.hidden-xs{href: "#"}
      %span.shop-icon
        %span.shop-quantity 3
    #navbar.navbar-collapse.collapse.pl-30{'aria-expanded': "false"}
      .visible-xs
        %button.close{type: "button", 'aria-label': "Close"}
          %span{'aria-hidden': "true"} &times;
        %ul.nav.navbar-nav
          %li
            = link_to t('top_menu.home'), root_path
          %li
            %a{type: "button", 'data-toggle': "collapse", href: "#menu", 'aria-expanded': "false", 'aria-controls': "menu"} Shop
            %ul#menu.collapse.list-unstyled.pl-30.mb-10{'aria-expanded': "false"}
              - categories.each do |category|
                %li
                  = link_to category_books_path(category), class: 'collapse-link' do
                    = category.name
          %li.divider{role: "separator"}
          - if user_signed_in?
            %li
              = link_to t('.my_account'), '#'
            %li
            = link_to t('.orders'), '#'
            %li
              = link_to t('.settings'), '#'
            %li
            = link_to t('.log_out'), destroy_user_session_path, method: :delete
          - else
            %li
              = link_to t('.log_in'), new_user_session_path
            %li
              = link_to t('.sign_up'), new_user_registration_path
      .hidden-xs
        %ul.nav.navbar-nav
          %li
            = link_to t('top_menu.home'),root_path
          %li.dropdown
            %a.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}=t('top_menu.shop')
            %ul.dropdown-menu
              - categories.each do |category|
                %li
                  = link_to category_books_path(category) do
                    = category.name
          - if user_signed_in?
            %li.dropdown
              %a.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
                = t('top_menu.my_account')
              %ul.dropdown-menu
                %li
                  = link_to t('top_menu.orders'), '#'
                %li
                  = link_to t('top_menu.settings'), '#'
                %li.divider{role: "separator"}
                %li
                  = link_to t('top_menu.log_out'), destroy_user_session_path, method: :delete
          - else
            %li
              = link_to t('top_menu.log_in'), new_user_session_path
            %li
              = link_to t('top_menu.sign_up'), new_user_registration_path

