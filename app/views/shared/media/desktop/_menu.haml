.hidden-xs
  %ul.nav.navbar-nav
    %li
      = link_to t('top_menu.home'),root_path
    %li.dropdown
      %a.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}=t('top_menu.shop')
      %ul.dropdown-menu
        - categories.each do |category|
          %li
            = link_to category_books_path(category) do
              = category.name
    - if user_signed_in?
      %li.dropdown
        %a.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
          = t('top_menu.my_account')
        %ul.dropdown-menu
          %li
            = link_to t('top_menu.orders'), '#'
          %li
            = link_to t('top_menu.settings'), settings_path
          %li.divider{role: "separator"}
          %li
            = link_to t('top_menu.log_out'), destroy_user_session_path, method: :delete
    - else
      %li
        = link_to t('top_menu.log_in'), new_user_session_path
      %li
        = link_to t('top_menu.sign_up'), new_user_registration_path
