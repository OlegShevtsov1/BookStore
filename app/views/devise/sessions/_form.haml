.form-group.mb-30
  = f.label :email, t('devise.enter_email')
  = f.input :email,
    required: false,
    autofocus: true,
    label: false,
    placeholder: t('devise.enter_email'),
    input_html: { autocomplete: :on }
.form-group.mb-30
  = f.label :password, t('devise.password')
  = f.input :password,
    required: false,
    label: false,
    placeholder: t('devise.password'),
    input_html: { autocomplete: :on }
  = link_to t('devise.forgot_password'), new_password_path(resource_name), class: 'help-block in-gold-500'
.form-group.checkbox.text-center.mb-30
  %label.checkbox-label
    %input.checkbox-input{type: "checkbox", hidden: "true"}
    %span.checkbox-icon
      %i.fa.fa-check
    - if devise_mapping.rememberable?
      = f.label :remember_me, class: 'checkbox-text remember-me'
.text-center
  = f.button :submit, t('devise.back_to_store'), class: 'btn btn-default mb-20'
