%main.container.general-main-wrap
  .text-center
    %h3.general-login-title=t('.log_in')
    = render 'devise/shared/facebook'
    %p.general-login-text= t('.or')
  = simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'general-form'}) do |f|
    .form-group.mb-30
      = f.label :email, t('.enter_email')
      = f.input :email,
        required: false,
        autofocus: true,
        label: false,
        placeholder: t('.enter_email'),
        input_html: { autocomplete: :on }
    .form-group.mb-30
      = f.label :password, t('.password')
      = f.input :password,
        required: false,
        label: false,
        placeholder: t('.password'),
        input_html: { autocomplete: :on }
      = link_to t('.forgot_password'), new_password_path(resource_name), class: 'help-block in-gold-500'
    .form-group.checkbox.text-center.mb-30
      %label.checkbox-label
        %input.checkbox-input{type: "checkbox", hidden: "true"}
        %span.checkbox-icon
          %i.fa.fa-check
        - if devise_mapping.rememberable?
          = f.label :remember_me, class: 'checkbox-text remember-me'
    .text-center
      = f.button :submit, t('.back_to_store'), class: 'btn btn-default mb-20'
  %p.general-sign-text.text-center
    = t('.not_account')
    = link_to t('.sign up'), new_registration_path(resource_name), class: 'in-gold-500'
