.form-group.mb-30
  = f.label :email, t('devise.enter_email')
  = f.input :email,
    required: true,
    autofocus: true,
    label: false,
    placeholder: t('devise.enter_email'),
    input_html: { autocomplete: :on }
.form-group.mb-30
  = f.label :password, t('devise.password')
  = f.input :password,
    required: true,
    label: false,
    hint: ("#{minimum_password_length} characters minimum" if minimum_password_length),
    placeholder: t('devise.password'),
    input_html: { autocomplete: :on }
.form-group.mb-30
  = f.label :password_confirmation, t('devise.confirm_password')
  = f.input :password_confirmation,
    required: true,
    label: false,
    placeholder: t('devise.confirm_password'),
    input_html: { autocomplete: :on }
.text-center
  = f.button :submit, t('devise.sign up'), class: 'btn btn-default mb-20'
