%main.container.general-main-wrap
  .text-center
    %h1.mb-30= t('devise.forgot_password')
    %p.general-password-text= t('devise.we_will_email')
  %div.general-form
  = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'general-form' }) do |f|
    = render 'devise/passwords/new_form', f: f

