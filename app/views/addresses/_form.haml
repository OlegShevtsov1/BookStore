= f.hidden_field :address_type, value: address_type
= f.hidden_field :user_id, value: current_user.id

.form-group
  = f.label :first_name, t('.first_name')
  = f.input :first_name,
     required: false,
     autofocus: true,
     label: false,
     placeholder: t('.first_name'),
     input_html: { autocomplete: :on }
