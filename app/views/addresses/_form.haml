= f.hidden_field :address_type, value: address_type

.form-group
  = f.input :first_name,
     required: false,
     autofocus: true,
     label: t('.first_name'),
     placeholder: t('.first_name'),
     input_html: { autocomplete: :on }
.form-group
  = f.input :last_name,
     required: false,
     autofocus: true,
     label: t('.last_name'),
     placeholder: t('.last_name'),
     input_html: { autocomplete: :on }
.form-group
  = f.input :address,
     required: false,
     autofocus: true,
     label: t('.address'),
     placeholder: t('.address'),
     input_html: { autocomplete: :on}
.form-group
  = f.input :city,
     required: false,
     autofocus: true,
     label: t('.city'),
     placeholder: t('.city'),
     input_html: { autocomplete: :on }
.form-group
  = f.input :zip,
     required: false,
     autofocus: true,
     label: t('.zip'),
     placeholder: t('.zip'),
     input_html: { autocomplete: :on }
.form-group
  = f.input :country, as: :string,
     required: false,
     autofocus: true,
     label: t('.country'),
     placeholder: t('.country'),
     input_html: { autocomplete: :on }
.form-group
  = f.input :phone,
     required: false,
     autofocus: true,
     label: t('.phone'),
     placeholder: t('.phone'),
     input_html: { autocomplete: :on }
