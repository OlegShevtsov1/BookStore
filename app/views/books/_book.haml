.col-sm-6
  .product-gallery
    .mb-20
    = image_tag book.decorate.image_url, alt: book.name, class: 'img-responsive'
    .images.clearfix
    - book.book_images.each do |book_image|
      = link_to '#', class: 'img-link' do
        = image_tag book_image.image_url, class: 'img-responsive'
.col-sm-6
  %h1.mt-res-0= book.name
  %p.lead.small= book.authors
  .row
    .col-xs-12.col-md-4
      %p.h1.in-gold-500.mt-10.inline
        #{t('EUR')}
      %p.h1.in-gold-500.mt-10.inline{id:'book_price'}
        #{book.price}
    .col-xs-5.col-md-3
      .input-group.general-position
        #book_minus.input-link
          %i.fa.fa-minus.line-height-40
        %input.form-control.quantity-input{id: "book_amount", type: "text", value: 1}
        #book_plus.input-link
          %i.fa.fa-plus.line-height-40
    .col-xs-7.col-md-5
      %button.btn.btn-default.pull-right.general-position #{t('.add_to_cart')}
  .general-info-wrap.divider-lg
    %p= t('.description')
    %p.lead.small.line-height-2
      - if book.description_length_short?
        #full_description #{book.description}
      - else
        #full_description{style: "display: none"} #{book.description}
        #short_description #{book.short_description}
        %a.in-gold-500.ml-10{id: "read_more", href: "#"} #{t('.read_more')}
  .general-info-wrap.divider-lg
    .clearfix
      %p.pull-left #{t('.year_of_publication')}
      %p.lead.small.pull-right #{book.year}
  .general-info-wrap.divider-lg
    .clearfix
      %p.pull-left #{t('.dimensions')}
      %p.lead.small.pull-right #{book.properties}
  .general-info-wrap.divider-lg
    .clearfix
      %p.pull-left #{t('.materials')}
      %p.lead.small.pull-right #{book.material}
= content_for(:custom_script) do
  = render 'books/click_amount.js', category: @category, book: book
