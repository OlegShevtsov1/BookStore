= content_for(:title, t('catalog.title'))
%main.container
  %h1.general-title-margin=t('catalog.title')
  .hidden-xs.clearfix
    .dropdowns.pull-right
      .dropdown.width-240
        %a.dropdown-toggle.lead.small{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
          =t("catalog.filter.#{Sort::SortBooksService::SORT_BY.first}")
          %i.fa.fa-angle-down.dropdown-icon.pull-right
        = render 'filter'
    = render 'categories'
  .dropdowns.mb-25.visible-xs
    %p.lead.small.mb-10=t('catalog.filter by category')
    .dropdown
      %a.dropdown-toggle.lead.small{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
        =t("catalog.filter.#{Sort::SortBooksService::SORT_BY.first}")
        %i.fa.fa-angle-down.dropdown-icon.pull-right
      = render 'filter'
    %p.lead.small.mb-10=t('catalog.sort by')
    .dropdown
      %a.dropdown-toggle.lead.small{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
        =t("catalog.filter.#{Sort::SortBooksService::SORT_BY.first}")
        %i.fa.fa-angle-down.dropdown-icon.pull-right
      = render 'filter'
  .mb-120
    = render 'books'
    .row.mb-25
    .text-center
      %button.btn.btn-primary=t('catalog.view more')
  = pagy_bootstrap_nav(@pagy).html_safe
