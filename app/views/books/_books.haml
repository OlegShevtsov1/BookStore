- books.each_slice(BooksController::BOOKS_COUNT_ROW) do |book_group|
  .row
    - book_group.each do |book|
      .col-xs-6.col-sm-3
        .general-thumb-wrap
          .thumbnail.general-thumbnail
            %img.img-shadow.general-thumbnail-img{src: "http://jonathantweedy.com/resources/thumbs/SmashingBook5ResponsiveWebDesign.jpg", alt: "design-book"}
            .thumb-hover
              .general-thumb-link-wrap
                = link_to category_book_path(book.category, book), class: 'thumb-hover-link' do
                  %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
                = link_to '#', class: 'thumb-hover-link' do
                  %i.fa.fa-shopping-cart.thumb-icon
        .general-thumb-info
          %p.title=book.name
          %p.font-16.in-gold-500
            â‚¬
            = book.price
          %span.divider-sm
          %p.lead.small
            = BookPresenter.new(book).authors
