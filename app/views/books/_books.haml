- books.each_slice(BooksController::BOOKS_COUNT_ROW) do |book_group|
  .row
    - book_group.each do |book|
      .col-xs-6.col-sm-3
        .general-thumb-wrap
          .thumbnail.general-thumbnail
            = image_tag book.decorate.image_url(:medium), alt: book.name, class: 'img-shadow general-thumbnail-img'
            .thumb-hover
              .general-thumb-link-wrap
                = link_to category_book_path(book.category, book), class: 'thumb-hover-link' do
                  %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
                = link_to items_path(current_item: book.id, current_user: current_user&.id, quantity: ItemForm::DEFAULT_COUNT_ITEM), method: :post, class: 'thumb-hover-link' do
                  %i.fa.fa-shopping-cart.thumb-icon
        .general-thumb-info
          %p.title=book.name
          %p.font-16.in-gold-500
            = book.decorate.price
          %span.divider-sm
          %p.lead.small
            = book.decorate.authors
