- books.each_slice(BooksController::BOOKS_COUNT_ROW) do |book_group|
  .row
    - book_group.each do |book|
      .col-xs-6.col-sm-3
        .general-thumb-wrap
          .thumbnail.general-thumbnail
            - if book.book_images.includes([:book_images]).any?
              = image_tag book.book_images.includes([:book_images]).first.image_url, alt: book.name, class: 'img-shadow general-thumbnail-img'
              .images.clearfix
              - book.book_images.includes([:book_images]).each do |book_image|
                = image_tag book_image.image_url, alt: book.name, class: 'img-shadow general-thumbnail-img'
            - else
              = image_tag 'active_admin/default.png', alt: book.name, class: 'img-shadow general-thumbnail-img'
            .thumb-hover
              .general-thumb-link-wrap
                = link_to category_book_path(book.category, book), class: 'thumb-hover-link' do
                  %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
                = link_to '#', class: 'thumb-hover-link' do
                  %i.fa.fa-shopping-cart.thumb-icon
        .general-thumb-info
          %p.title=book.name
          %p.font-16.in-gold-500
            â‚¬
            = book.price
          %span.divider-sm
          %p.lead.small
            = BookPresenter.new(book).authors
