%main.container
  %h1.general-title-margin #{t('.settings')}
  %ul.nav.clearfix.mb-20{role: "tablist"}
    %li.tab-item.active{role: "presentation"}
      %a.tab-link{href: "#address", 'aria-controls': "address", role: "tab", 'data-toggle': "tab"} #{t('settings.address')}
    %li.tab-item{role: "presentation"}
      %a.tab-link{href: "#privacy", 'aria-controls': "privacy", role: "tab", 'data-toggle': "tab"} #{t('settings.privacy')}
  .tab-content
    -##address.tab-pane.fade.in.active.general-main-wrap{role: "tabpanel"}
    #address.tab-pane.fade{role: "tabpanel"}
      .hidden-xs.hidden-sm
        .row
          .col-md-5
            %h3.general-subtitle.mt-0 #{t('.billing_address')}
          .col-md-5.col-md-offset-1
            %h3.general-subtitle.mt-0 #{t('.shipping_address')}
      .row
        .col-md-5.mb-40
          .visible-xs.visible-sm
            %h3.general-subtitle.mt-0 #{t('.billing_address')}
          = render 'addresses/new', address_type: 'billing', address_form:  @billing_form
        .col-md-5.col-md-offset-1.mb-25
          .visible-xs.visible-sm
            %h3.general-subtitle.mt-0 #{t('.shipping_address')}
          = render 'addresses/new', address_type: 'shipping', address_form: @shipping_form
    -##privacy.tab-pane.fade{role: "tabpanel"}
    #privacy.tab-pane.fade.in.active.general-main-wrap{role: "tabpanel"}
      .row.mb-60
        .col-sm-5
          %p.in-gold-500.font-18.mb-25 #{t('.s_email')}
          = render 'settings/email', email_form: @email_form
        .col-sm-5.col-sm-offset-1
          %p.in-gold-500.font-18.mb-25 #{t('.password')}
          = render 'settings/password', password_form: @password_form
        .col-sm-12
          %p.in-gold-500.font-18.mb-25 #{t('.remove_account')}
          = render 'settings/remove_account'