#slider.carousel.slide{'data-ride': "carousel"}
  %ol.carousel-indicators
    - books_slider.each_with_index do |book, index|
      %li{class: "#{'active' if index == 0}",'data-target': "#slider", 'data-slide-to': index}
  .carousel-inner{role: "listbox"}
    - books_slider.each_with_index do |book, index|
      .item{class: "#{'active' if index == 0}"}
        .row
          .col-sm-5
            .general-img-wrap
              - if book.book_images.includes([:book_images]).any?
                = image_tag book.book_images.includes([:book_images]).first.image_url, alt: book.name, class: 'img-shadow general-thumbnail-img'
              - else
                = image_tag 'active_admin/default.png', alt: book.name, class: 'img-shadow general-thumbnail-img'
          .col-sm-7
            .mb-60
              %h1=book.name
              %p.lead=book.description
              %p.lead.small
                - book.authors.each do |author|
                  = author.decorate.name
              .general-align
                %button.btn-primary.btn=t('.slider.by_now')
  %a.left.carousel-control{href: "#slider", role: "button", 'data-slide': "prev"}
    %span.icon-prev{'aria-hidden': "true"}
    %span.sr-only=t('.slider.previous')
  %a.right.carousel-control{href: "#slider", role: "button", 'data-slide': "next"}
    %span.icon-next{'aria-hidden': "true"}
    %span.sr-only=t('.slider.next')