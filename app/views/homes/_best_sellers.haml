- if best_sellers
  .mb-35
    %h3= t('.best_sellers')
    .row
      - best_sellers.each do |book|
        .col-sm-6.col-md-3
          .general-thumb-wrap
            .thumbnail.general-thumbnail
              = image_tag book.decorate.image_url(:medium), class: 'img-shadow general-thumbnail-img'
              .thumb-hover
                .general-thumb-link-wrap
                  = link_to category_book_path(book.category, book), class: 'thumb-hover-link' do
                    %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
                  = link_to items_path(current_item: book.id, current_user: current_user&.id, quantity: ItemForm::DEFAULT_COUNT_ITEM), method: :post, class: 'thumb-hover-link' do
                    %i.fa.fa-shopping-cart.thumb-icon
          .mb-35
            .clearfix
              %p.pull-right.font-16.in-gold-500= book.decorate.price
              %p.title.mr-55= book.name
            %span.divider-sm
            %p.lead.small
              = book.decorate.authors
