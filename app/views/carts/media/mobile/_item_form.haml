.visible-xs
  - books.each do |book|
    .general-cart-item.divider-lg-bottom
      = form_tag item_path(book), method: :delete do
        = button_tag(type: "submit", class: 'close general-cart-close', 'aria-label': "Close") do
          %span{'aria-hidden': "true"} &times;
      .general-img-wrap-table
        = link_to category_book_path(book.category, book) do
          = image_tag book.decorate.image_url(:small), alt: book.name, class: 'cart-img-shadow pull-left'
      %p.title{style: 'clear: both'}= book.name
      %table.table
        %tr
          %td
            %span.in-grey-600= t('.price')
          %td
            %span.font-16.in-gold-500.inline
              #{t('EUR')}
            %span.font-16.in-gold-500.inline
              #{book.price}
        %tr
          %td.vertical-middle
            %span.in-grey-600= t('.quantity')
          %td
            .input-group
              .input-link.pointer{id:"book_minus_id_m#{book.id}"}
                %i.fa.fa-minus.line-heaght-40
              = text_field_tag :quantity, "", class: 'form-control quantity-input', id: "book_amount_id_m#{book.id}", value: current_order.decorate.count_books(book), readonly: :readonly, autofocus: true
              .input-link.pointer{id:"book_plus_id_m#{book.id}"}
                %i.fa.fa-plus.line-heaght-40
        %tr
          %td
            %span.in-grey-600= t('.subtotal')
          %td
            %span.font-16.in-gold-500.inline
              #{t('EUR')}
            %span.font-16.in-gold-500.inline{id:"book_price_id_m#{book.id}"}
              #{current_order.decorate.subtotal_books_price(book)}
    = content_for(:custom_script) do
      = render 'carts/media/mobile/click_amount.js', category: book.category, book: book, order: current_order
