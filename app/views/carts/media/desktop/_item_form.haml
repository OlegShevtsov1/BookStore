.hidden-xs
  %table.table.table-hover
    %tr.no-hover
      %th.col-pic.pl-0
        %span.in-grey-600= t('.product')
      %th.col-title
      %th.col-price
        %span.in-grey-600= t('.price')
      %th.col-quantity
        %span.in-grey-600= t('.quantity')
      %th.col-total
        %span.in-grey-600= t('.subtotal')
      %th.col-close
    - books.each do |book|
      %tr
        %td
          .general-img-wrap-table
            = link_to category_book_path(book.category,book) do
              = image_tag book.decorate.image_url, alt: book.name, class: 'cart-img-shadow pull-left'
        %td
          %p.title= book.name
        %td
          %span.font-16.in-gold-500.inline
            #{t('EUR')}
          %span.font-16.in-gold-500.inline{id:'book_price'}
            #{book.price}
        %td
          .input-group
            #book_minus.input-link
              %i.fa.fa-minus.line-heaght-40
            = text_field_tag :quantity, "", class: 'form-control quantity-input', id: "book_amount", value: current_order.decorate.count_books(book), autofocus: true
            #book_plus.input-link
              %i.fa.fa-plus.line-heaght-40
        %td
          %span.font-16.in-gold-500 â‚¬32.90
        %td
          %button.close.general-cart-close{type: "button", 'aria-label': "Close"}
            %span{'aria-hidden': "true"} &times;
      = content_for(:custom_script) do
        = render 'books/click_amount.js', category: book.category, book: book

