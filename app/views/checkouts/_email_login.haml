%main.container
  .row
    .col-md-5.mb-40
      .text-center
        %h3.general-subtitle= t('.returning_customer')
        %a.general-login-icon{href: "#"}
          %i.fa.fa-facebook-official
        %p.general-login-text= t('.or')
      %form.general-form
        .mb-40
          %p.mb-15= t('.log_in_with_password')
          .form-group.mb-30
            %label.control-label.input-label{for: "email"} Enter Email
            %input#email.form-control{name:"email", type: "email", placeholder: "Enter Email"}
          .form-group.mb-30
            %label.control-label.input-label{for: "password"} Password
            %input#password.form-control{name:"password", type: "password", placeholder: "Password"}
            %a.help-block.in-gold-500{href: "#"}= t('.forgot_password')
        %button.btn.disabled.mb-20= t('.log_in_with_password')
    .col-md-5.col-md-offset-1.mb-60
      .text-center
        %h3.general-subtitle= t('.new_customer')
        %a.general-login-icon{href: "#"}
          %i.fa.fa-facebook-official
        %p.general-login-text= t('.or')
      %form.general-form
        .mb-40
          %p.mb-5= t('.quick_register')
          %p.general-info-text.font-12.mb-20= t('.password_later')
          .form-group.mb-30
            %label.control-label.input-label{for: "email"} Enter Email
            %input#email.form-control{name:"email", type: "email", placeholder: "Enter Email"}
        %button.btn.disabled.mb-20= t('.continue_to_checkout')
