%main.container.general-main-wrap
  = render 'checkouts/steps', service: service
  .text-center.mb-40
    %h3.general-subtitle= t('.thank_you_for_order')
    %p.fw-300= t('.send_massage_email_in_complete', email: service.current_order.user.email)
  .row.mb-20
    .col-sm-6
      .visible-xs
        = render 'checkouts/media/mobile/complete_order', service: service
      = render 'checkouts/media/desktop/confirm_address', address: service.current_service.addresses.billing_form.decorate
    .col-sm-6.hidden-xs.text-right
      = render 'checkouts/media/desktop/complete_order', service: service
  .visible-xs
    = render 'checkouts/media/mobile/confirm_items', items: service.current_order.items.includes(%i[book])
  .hidden-xs.divider-lg.pt-20
    = render 'checkouts/media/desktop/confirm_items', items: service.current_order.items.includes(%i[book])
  .text-center.general-text-right
    = render 'checkouts/order_summary', current_order: service.current_order.decorate, service: service
  .text-center
    = link_to t('.back_to_store'), root_path, class: 'btn btn-default mb-20'
