- case @service.step
- when   'email_login'
  = render 'checkouts/email_login'
- when   'address'
  = render  'checkouts/address', service: @service, address: @service.current_service
- when   'choose_delivery'
  = render  'checkouts/shipping', service: @service
- when   'pay'
  = render  'checkouts/payment', service: @service, credit_card: @service.current_service.credit_card
- when   'confirmation'
  = render  'checkouts/confirm', service: @service
- when   'completed'
  = render  'checkouts/complete', service: @service

