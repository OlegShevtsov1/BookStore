%main.container.general-main-wrap
  %h1.general-title-margin= t('.checkout')
  = render 'checkouts/steps', service: service
  .row.mb-20
    .col-sm-3
      %h3.general-subtitle= t('.shipping_address')
      = render 'checkouts/media/desktop/confirm_address', address: service.current_service.addresses.shipping_form.decorate
    .col-sm-3
      %h3.general-subtitle= t('.billing_address')
      = render 'checkouts/media/desktop/confirm_address', address: service.current_service.addresses.billing_form.decorate
    .col-sm-3
      %h3.general-subtitle= t('.shipments')
      = render 'checkouts/media/desktop/confirm_shipping', shipping: service.current_service.shipping
    .col-sm-3
      %h3.general-subtitle= t('.payment_information')
      = render 'checkouts/media/desktop/confirm_payment', payment: service.current_service.payment
  .visible-xs
    = render 'checkouts/media/mobile/confirm_items', items: service.current_order.items.includes(%i[book])
  .hidden-xs.divider-lg.pt-20
    = render 'checkouts/media/desktop/confirm_items', items: service.current_order.items.includes(%i[book])
  .text-center.general-text-right
    = render 'checkouts/order_summary', current_order: service.current_order.decorate, service: service
  .text-center
    = button_to t('.place_order'), checkouts_path, method: :put, class: 'btn btn-default mb-20'
